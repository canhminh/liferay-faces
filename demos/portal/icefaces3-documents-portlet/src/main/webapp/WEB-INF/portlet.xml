<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
	<portlet>
		<portlet-name>1</portlet-name>
		<display-name>ICEfaces3 Documents</display-name>
		<portlet-class>javax.portlet.faces.GenericFacesPortlet</portlet-class>
		<!-- Chrome has a problem with HttpServletResponse.SC_NOT_MODIFIED JavaScript resources after <redirect /> in a navigation rule, so -->
		<!-- since the bridge can't sniff for browsers yet, need to just disable the ability to set the status code as a hack. -->
		<init-param>
			<name>com.liferay.faces.bridge.containerAbleToSetHttpStatusCode</name>
			<value>false</value>
		</init-param>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/WEB-INF/views/portletModeView.xhtml</value>
		</init-param>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.edit</name>
			<value>/WEB-INF/views/portletModeEdit.xhtml</value>
		</init-param>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.help</name>
			<value>/WEB-INF/views/portletModeHelp.xhtml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<portlet-info>
			<title>ICEfaces3 Documents</title>
			<short-title>ICEfaces3 Documents</short-title>
			<keywords>ICEfaces3 Documents</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>rowsPerPage</name>
				<value>15</value>
			</preference>
			<preference>
				<name>scopeGroupId</name>
				<value></value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>
